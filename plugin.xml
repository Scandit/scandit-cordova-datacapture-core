        <source-file src="src/android/actions/ActionViewShow.kt"
            target-dir="kotlin/com/scandit/datacapture/cordova/core/actions" />
        <source-file src="src/android/actions/ActionViewHide.kt"
            target-dir="kotlin/com/scandit/datacapture/cordova/core/actions" />
