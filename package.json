{
  "name": "scandit-cordova-datacapture-core",
  "version": "6.2.0-beta.7",
  "description": "Scandit Data Capture SDK for Cordova",
  "license": "Apache-2.0",
  "keywords": [
    "ecosystem:cordova",
    "cordova-ios",
    "cordova-android"
  ],
  "scripts": {
    "build": "node ./scripts/build-ts.js",
    "test": "npm run lint && jest",
    "lint": "tslint --project .",
    "paramedic:ios": "cordova-paramedic --platform ios --plugin ./ --skipAppiumTests --cleanUpAfterRun",
    "paramedic:android": "cordova-paramedic --platform android --plugin ./ --skipAppiumTests --cleanUpAfterRun",
    "paramedic": "npm run paramedic:ios && npm run paramedic:android",
    "coverage": "jest --coverage",
    "build-debug-app": "cd .. && rm -rf debugapp && scripts/create-debug-app.sh",
    "clear-jest-cache": "jest --clearCache || true",
    "clean": "npm run clear-jest-cache && node ./scripts/clean.js",
    "clean-all": "npm run clean && node ./scripts/clean-all.js"
  },
  "dependencies": {
    "adm-zip": "^0.4.13",
    "typescript": "^3.4.5",
    "xcode": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "cordova-paramedic": "https://github.com/apache/cordova-paramedic.git",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0"
  },
  "cordova": {
    "id": "scandit-cordova-datacapture-core",
    "platforms": [
      "ios",
      "android"
    ]
  }
}
